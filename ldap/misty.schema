  SYNTAX 1.3.6.1.4.1.1466.115.121.1.24
  SINGLE-VALUE )

attributetype ( mistyZonesAttributeType:1.2016.5.11.9
  NAME 'mode'
  DESC 'Zone operational mode'
  EQUALITY caseIgnoreIA5Match
